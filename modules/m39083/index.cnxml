              <m:msub>
                <m:mi>T</m:mi>
                <m:mn>2</m:mn>
              </m:msub>
            </m:mfrac>
          </m:mrow>
        </m:math>
      </equation>
      <para id="id235585">Therefore,</para>
      <equation id="id235588">
        <m:math overflow="scroll" mode="display">
          <m:mrow>
            <m:msub>
              <m:mi>V</m:mi>
              <m:mn>2</m:mn>
            </m:msub>
            <m:mo>=</m:mo>
            <m:mfrac>
              <m:mrow>
                <m:msub>
                  <m:mi>V</m:mi>
                  <m:mn>1</m:mn>
                </m:msub>
                <m:mo>×</m:mo>
                <m:msub>
                  <m:mi>T</m:mi>
                  <m:mn>2</m:mn>
                </m:msub>
              </m:mrow>
              <m:msub>
                <m:mi>T</m:mi>
                <m:mn>1</m:mn>
